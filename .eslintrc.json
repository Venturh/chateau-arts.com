{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["tailwindcss"],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "react/jsx-key": "off",
    "tailwindcss/no-custom-classname": "off",
    "prettier/prettier": [
        "error",
        {
          "printWidth": 100,
          "useTabs": true,
          "tabWidth": 2,
          "singleQuote": true
        }
      ]
    },
  "settings": {
    "tailwindcss": {
      "callees": ["cn"]
    }
  }
}
